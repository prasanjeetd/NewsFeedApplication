@model NewsFeedApplication.Models.Entities.Category

@{
    ViewBag.Title = "Delete Category";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
            </p>
        </div>
    </section>
}

@if (ViewBag.DeleteError == null || ViewBag.DeleteError == "")
{
    <h3>Are you sure you want to delete @Html.DisplayFor(model => model.CategoryName) category?</h3>
}
else
{
    <h3>@ViewBag.DeleteError</h3>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
